<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <!--服务注册-->
    <context:component-scan base-package="com.dong.rpc.service.hello"/>

    <bean class="com.dong.rpc.server.RPCServiceInitializer"/>

    <bean class="com.dong.rpc.registry.impl.ZKServiceRegistry">
        <constructor-arg index="0" value="121.43.104.34:2181"/>
    </bean>

    <!--服务发现-->
    <bean id="zkServiceDiscovery" class="com.dong.rpc.registry.impl.ZKServiceDiscovery">
        <constructor-arg index="0" value="121.43.104.34:2181"/>
        <constructor-arg index="1">
            <list>
                <value type="java.lang.String" >com.dong.rpc.service.name.NameService</value>
            </list>
        </constructor-arg>
    </bean>

    <bean id="rpcClient" class="com.dong.rpc.client.RPCClient">
        <constructor-arg index="0" ref="zkServiceDiscovery"/>
    </bean>

    <bean id="rpcProxy" class="com.dong.rpc.client.RPCProxy">
        <constructor-arg index="0" ref="rpcClient"/>
    </bean>

    <bean id="helloService" class="com.dong.rpc.client.factory.ImportedServiceFactory">
        <constructor-arg index="0" value="com.dong.rpc.service.name.NameService"/>
        <constructor-arg index="1" ref="rpcProxy"/>
    </bean>
</beans>